<div class="container w-50">
  <div class="w-50 mx-auto bg-light p-4 mt-4">
    <h1 class="mt-2">My Tasks</h1>
      <div class="mt-3 mx-auto ">
        <ul class="list-unstyled ms-2">
          <% @tasks.each do |task| %>
            <li>
              <% if task.completed %>
                <i class="fa-regular fa-square-check me-1"></i>
              <% else %>
                <i class="fa-regular fa-square me-1"></i>
              <% end %>
              <%= link_to task.title, task_path(task), class: "text-decoration-none" %>
            </li>
          <% end %>
        </ul>
        <%= link_to new_task_path, class: "btn btn-primary" do %>
          <i class="fa-solid fa-circle-plus"></i>
        <% end %>
      </div>
  </div>


</div>
