<div class="container w-50">
  <div class="w-50 mx-auto bg-light p-4 mt-4">
    <h1 class="mt-2">My Tasks</h1>
    <div class="d-flex justify-content-between">
      <div class="">
        <h5 class="mt-3"><%= @task.title %></h4>
        <p><%= @task.details %></p>
        <% if @task.completed %>
          <p><i class="fa-regular fa-square-check me-1"></i>Completed</p>
        <% else %>
          <p><i class="fa-regular fa-square me-1"></i>Not completed Yet</p>
        <% end %>

        <%= link_to "Go back to the list", tasks_path, class: "btn btn-outline-secondary" %>
      </div>
        <div class="d-flex flex-column justify-content-end">
        <%= link_to edit_task_path, class: "btn btn-outline-primary mb-1" do %>
              <i class="fa-regular fa-pen-to-square"></i>
        <% end  %>
        <%= link_to task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger" do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    </div>



  </div>
</div>
